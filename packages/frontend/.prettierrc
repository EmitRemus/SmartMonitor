{
    "extends": ["plugin:prettier/recommended"],
    "bracketSpacing": false,
    "tabWidth": 4,
    "useTabs": false,
    "trailingComma": "all",
    "singleQuote": true,
    "plugins": [
        "prettier-plugin-tailwindcss",
        "@trivago/prettier-plugin-sort-imports"
    ],
    "importOrder": ["^[a-zA-Z]", "^@/", "^[./]"],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true,
    "endOfLine": "auto"
}
